<div class="wrapper">
  <div class="content">

    <h2>Current Top Movie Releases</h2>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Genre</th>
          <th>Critics score</th>
          <th>Release date</th>
          <th>Poster url</th>
          <th>Synopsis</th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.genre %></td>
            <td><%= movie.critics_score %></td>
            <td><%= movie.release_date %></td>
            <td><%= movie.poster_url %></td>
            <td><%= movie.synopsis %></td>
            <td><%= link_to 'Show', movie %></td>
            <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
            <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

